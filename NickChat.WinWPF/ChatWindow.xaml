<Window x:Class="NickChat.WinWPF.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NickChat.WinWPF"
        mc:Ignorable="d"
        Title="Nathanael :: NickChat" MinHeight="370" MinWidth="320" Height="370" Width="320">
    <DockPanel Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" />
            <MenuItem Header="_Help" />
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            Last message received on 4/15/08 at 3:15:05 PM.
        </StatusBar>

        <DockPanel Margin="5,5,5,0" >
            <DockPanel DockPanel.Dock="Bottom" Margin="0,5,0,0" MinHeight="50">
                <Button DockPanel.Dock="Right" Content="Send" Padding="5"/>
                <TextBox DockPanel.Dock="Bottom" MinLines="3" MaxLines="3" Margin="0,0,5,0" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" TextWrapping="Wrap"/>
            </DockPanel>

            <Border Background="White" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1,1,1,1">
                <FlowDocumentScrollViewer />
            </Border>
        </DockPanel>
    </DockPanel>
</Window>
